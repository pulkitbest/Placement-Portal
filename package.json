{
  "name": "placementportal",
  "version": "1.0.0",
  "description": "MERN Placement Portal for TCP Cell, IIIT Allahabad",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node backend/server",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "render-postbuild": "NPM_CONFIG_PRODUCTION=false npm install && npm install --prefix frontend && npm run build --prefix frontend"
  },
  "author": "Pulkit Gupta",
  "license": "ISC",
  "dependencies": {
    "@emailjs/nodejs": "^2.1.1",
    "@react-pdf-viewer/core": "^3.1.0",
    "@react-pdf-viewer/default-layout": "^3.10.0",
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-handler": "^1.2.0",
    "file-saver": "^2.0.5",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^6.8.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "otp-generator": "^4.0.0",
    "pdfjs-dist": "^2.12.313",
    "util": "^0.12.5"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "nodemon": "^2.0.20"
  }
}
